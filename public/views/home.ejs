<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="STEMChat">
    <title>STEMChat</title>
    <link rel="shortcut icon" href="./favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel ="stylesheet" href="css/home.css">
      <link rel="stylesheet" href="/css/pure_css.css">
      <link rel="stylesheet" href="/css/quill.css">
</head>

<body>
  <div class="_topnav">

      <a href='<%=home%>' class="_active">Home</a>
  </div>
  <div class="column left" >
    <div id="mySidebar" class="sidebar">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">✖</a>

      <a href='<%=about%>'>About</a>
      <a href='<%=blog%>'>Blogs</a>
      <a href='<%=project%>'>Projects</a>
      <a href="/">Groups</a>
      <a href='<%=feedback%>'>Feedback</a>
      <a href='<%=profile%>'>Profile</a>

        <a href="<%=logout%>">Logout</a>


    </div>

       <div class="header">
        <button class="openbtn" onclick="openNav()">☰</button>
        <form class="" action="/home" method="post">
        <button class="search-but" name="search_button" type="submit">GO</button>
        <input class="search-bar" type="text" placeholder="Search.." name="search_text">
        </form>
       </div>


  </div>
  <div class="column right" >
      <div class="chatArea" id='chat'>

      </div>
      <div class="footer">


         <center>
           <div class="toolbar"></div>
          <div contenteditable="true" class="edit" id='editor'></div>
         </center>
         <button type="button" name="post" id='saveDelta'>POST</button>

       <!--  <textarea class="text-area" placeholder="Type your message"></textarea>  -->

      </div>

  </div>




<script src="/js/home.js"></script>
<script>
    function _myFunction2() {
        var x = document.getElementById("myLinks");
        if (x.style.display === "block") {
            x.style.display = "none";
        } else {
            x.style.display = "block";
            x
        }
    }
    </script>

<script src="/js/quill.js"></script>

<!-- Initialize Quill editor -->
<script>

var quill_c = new Quill('#chat', {
  modules:{
    toolbar:false
  },
  placeholder:"",
  scrollingContainer: '#chat',
});
quill_c.enable(false);
  var options=[
    ['bold','italics','underline','strike'],
    ['blockquote','code-block'],
    [{'header':1},{'header':2}],
    [{'list':'ordered'},{'list':'bullet'}],
     [{ 'script': 'sub'}, { 'script': 'super' }],
     [{ 'indent': '-1'}, { 'indent': '+1' }],
 [{ 'direction': 'rtl' }],
 [{ 'color': [] }, { 'background': [] }],
 [{ 'font': [] }],
 [{ 'align': [] }],
 ['link','image','video']
  ];
  var quill = new Quill('#editor', {
    modules:{
      toolbar:options,

    },
    placeholder:"Type your message",
    scrollingContainer: '#editor',
    theme: 'snow'
  });
  document.getElementById('saveDelta').addEventListener('click',function(){
    quill_c.setContents(quill.getContents());
    document.querySelector("#chat").scrollTop=document.querySelector("#chat").scrollHeight;
    quill.setContents('');
  });
</script>
</body>
<style>
    /* --------------- */

    ._topnav {
        overflow: hidden;
        width: 100%;
        top: 0;
        left: 0;
        height: 5%;
        background-color: #333;
        position: fixed;
        z-index: 0;
        background-color: #4CAF50;
    }

    ._topnav #myLinks {
        display: none;
    }

    /* Style navigation menu links */
    ._topnav a {
        color: white;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 1em;
        display: block;
        background-color: #333;
        text-align: center;
        align-items: center;
        align-content: center;
        vertical-align: top;

    }

    /* Style the hamburger menu */
    ._topnav a._icon {
        background: #333;
        float: left;
        display: block;
    }

    /* Add a grey background color on mouse-over */
    ._topnav a:hover {
        background-color: #ddd;
        color: black;
    }

    /* Style the active link (or home/logo) */
    ._topnav a._active {
        top: 0;
        height: 90%;
        width: 100%;
        padding: 5px;
        position: absolute;
        background-color: #4CAF50;
        color: white;
        text-align: center;
    }
</style>

</html>
